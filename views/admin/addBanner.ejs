      <!-- Forms Section-->
      <section class="px-4"> 
     
        <section id="custom-container" class="container w-100 mt-3 mx-0 p-0">
          <div class="bg-black">
              <p class="text-white px-3 fw-bold py-3">Add Banner</p>
          </div>
        
          <form action="/admin/addbanner" method="post" class="d-flex flex-column align-items-center"  enctype="multipart/form-data">
              <div class="input-container d-flex flex-column col-5 py-1">
                  <label for="name" class="text-black fw-bold fs-5 py-1">Name</label>
                  <input type="text" name="bannerName" id="bannerName" class="rounded border-0 py-2 px-2" placeholder="Banner Name" required>
              </div>
      


              <div class="input-container d-flex flex-column col-5 py-1">
                <label for="description" class="text-black fw-bold fs-5 py-1">Description</label>
                <textarea id="description" name="description" class="rounded border-0 py-2 px-2" placeholder="Description"></textarea>
              </div>

              <div class="input-container d-flex flex-column col-5 py-1">
                <label for="description" class="text-black fw-bold fs-5 py-1">Action</label>
                <input tyoe="text" id="action" name="action" class="rounded border-0 py-2 px-2" placeholder="Description">
              </div>

              <div class="input-container d-flex flex-column col-5 py-1">
                <label for="productImage" class="text-black fw-bold fs-5 py-1">Banner</label>
                <input type="file" accept=".jpeg, .png, .jpg" multiple id="banner" name="banner" class="rounded border-0 py-2 px-2" required>
              </div>
              <%if (typeof err!="undefined" && err) {%>
                  <p class="text-danger text-center"><%=err%></p>
              <%}%>
             <div class="d-flex flex-row justify-content-center align-items-center col-5 py-2">
                  <button class="btn bg-warning border-0 rounded mx-1 px-4 py-2"><a href="/bannertable" class="text-dark text-decoration-none">Cancel</a></button>
                  <button class="btn bg-success border-0 rounded mx-1 px-4 py-2 text-white" type="submit">Add Banner</button>
             </div>
          </form>
      </section>
        
        
        
      </section>
