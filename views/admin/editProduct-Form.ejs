<%-include('../layouts/admin/admin-header')  -%> 
      <!-- Breadcrumb-->
      
              <li class="breadcrumb-item active fw-light" aria-current="page">Products  </li>
            </ol>
          </nav>
        </div>
      </div>
      <!-- Page Header-->
     
      <!-- Forms Section-->
      <section class="px-4"> 
        <div class="bg-black">
          <p class="text-white px-3 fw-bold py-3">Edit Product</p>
      </div>
    
      <form action="/admin/editinproduct" method="post" class="d-flex flex-column align-items-center">
          <div class="input-container d-flex flex-column col-5 py-1">
              <label for="name" class="text-black fw-bold fs-5 py-1">Name</label>
              <input type="text" name="name" id="name" class="rounded border-0 py-2 px-2" placeholder="Coupon Code" required value="<%=product.name%>">
          </div>
  
          <div class="input-container d-flex flex-column col-5 py-1">
              <label for="description" class="text-black fw-bold fs-5 py-1">Description</label>
              <textarea type="text" name="description" id="description" class="rounded border-0 py-2 px-2" placeholder="Maximum allowed users" required value="<%=product.description%>"></textarea>
          </div>
  
          <div class="input-container d-flex flex-column col-5 py-1">
              <label for="category" class="text-black fw-bold fs-5 py-1">Category</label>
              <input type="text" name="category" id="category" class="rounded border-0 py-2 px-2" placeholder="Minimum purchase amount" required value="<%=product.category%>">
          </div>
  
          <div class="input-container d-flex flex-column col-5 py-1">
              <label for="price" class="text-black fw-bold fs-5 py-1">Price</label>
              <input type="number" name="price" id="price" class="rounded border-0 py-2 px-2" placeholder="Discount amount" required value="<%=product.price%>">
          </div>
          
          <div class="input-container d-flex flex-column col-5 py-1">
              <label for="stockQuantity" class="text-black fw-bold fs-5 py-1">Stock Quantity</label>
              <input type="number" name="stockQuantity" id="stockQuantity" class="rounded border-0 py-2 px-2" placeholder="Expiry date" required value="<%=product.stockQuantity%>">
          </div>
          <div class="input-container d-flex flex-column col-5 py-1">
            <label for="productImage" class="text-black fw-bold fs-5 py-1">Product Image:</label>
            <input type="file" id="productImage" name="productImage" class="rounded border-0 py-2 px-2" required value="<%=product.productImage%>">
          </div>
          <%if (typeof err!="undefined" && err) {%>
              <p class="text-danger text-center"><%=err%></p>
          <%}%>
         <div class="d-flex flex-row justify-content-center align-items-center col-5 py-2">
              <button class="btn bg-warning border-0 rounded mx-1 px-4 py-2"><a href="/admin/productTable" class="text-dark text-decoration-none">Cancel</a></button>
              <button class="btn bg-success border-0 rounded mx-1 px-4 py-2 text-white" type="submit">Edit Product</button>
         </div>
      </form>
        
        
      </section>
      <%-include('../layouts/admin/admin-footer')  -%> 