<%-include('../layouts/user/user-header') -%>
  <!-- Header part end-->

  <!--================Home Banner Area =================-->
  <!-- breadcrumb start-->
  <section class="breadcrumb breadcrumb_bg">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="breadcrumb_iner">
            <div class="breadcrumb_iner_item">
              <h2>Order Confirmation</h2>
              <p>Home <span>-</span> Order Confirmation</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- breadcrumb start-->

  <!--================ confirmation part start =================-->
  <section class="confirmation_part padding_top">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="confirmation_tittle">
            <span>Thank you. Your order has been received.</span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="order_details_iner">
            <h3>Order Details</h3>
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col" colspan="2">Product</th>
              <th></th>
                  <th scope="col">Price</th>
                  
                </tr>
              </thead>
              <tbody>
                
                <% order.products.forEach((item)=>{%>
                <tr>
                  <th colspan="2"><span><%= item.product.name %></span></th>
                  <th></th>
                  <th> <span>₹<%= item.product.price %></span></th>
                </tr>
               
                
              </tr>
              <%})%>
              </tbody>
              <tfoot>
                <tr>
                  <th scope="col" colspan="3">Discount</th>
                  <th scope="col">₹<%= order.discount %></th>
                  </tr>
                  <tr>
                  <th scope="col" colspan="3">Total</th>
                  
                  <th scope="col">₹<%= order.billamount %></th>
                </tr>
                  
               
              </tfoot>
            </table>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>order info</h4>
            <ul>
              <li>
                <p>date</p><span>: <%= order.orderdate.toLocaleString() %></span>
              </li>
              <!-- <li>
                <p>date</p><span></span>
              </li> -->
              <li>
                <p>total</p><span>: <%= order.billamount %></span>
              </li>
              <li>
                <p>Payment method</p><span>: <%= order.payment %></span>
              </li>
            </ul>
          </div>
        </div>
       

      
    </div>
  </section>
  <!--================ confirmation part end =================-->

  <!--::footer_part start::-->
  <%-include('../layouts/user/user-footer') -%>